@model Fravin_Models.ViewModels.ProductUserVM
<form method="post" id="payment-form">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-outline-info btn-sm">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">User Details:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="@Model.ApplicationUser.FullName" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                       <input asp-for="@Model.ApplicationUser.PhoneNumber" required type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="@Model.ApplicationUser.Email" required type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                @if (User.IsInRole(Fravin_Utility.WC.AdminRole))
                                {
                                     <div class="row my-1">
                                    <div class="col-3">
                                        <label>Street Address</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="@Model.ApplicationUser.StreetAddress" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.StreetAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                 <div class="row my-1">
                                    <div class="col-3">
                                        <label>City</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="@Model.ApplicationUser.City" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.City" class="text-danger"></span>
                                    </div>
                                </div>
                                 <div class="row my-1">
                                    <div class="col-3">
                                        <label>State</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="@Model.ApplicationUser.State" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.State" class="text-danger"></span>
                                    </div>
                                </div>
                                 <div class="row my-1">
                                    <div class="col-3">
                                        <label>PostalCode</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="@Model.ApplicationUser.PostalCode" type="text" class="form-control" />
                                        <span asp-validation-for="ApplicationUser.PostalCode" class="text-danger"></span>
                                    </div>
                                </div>
                                }
                            </div>
                            <div class="col-12 col-lg-5 row">
	                            <div class="col-12">
		                            <h4 class="d-flex justify-content-between align-items-center mb-3">
			                            <span class="text-info">Summary:</span>
		                            </h4>
		                            <ul class="list-group mb-3">
			                            @{var orderTotal = 0.0;}
			                            @for(int i=0;i<Model.ProductList.Count();i++)
			                            {
				                            <input type="hidden" asp-for="@Model.ProductList[i].Id">
				                            <input type="hidden" asp-for="@Model.ProductList[i].Name">
				                            <input type="hidden" asp-for="@Model.ProductList[i].Price">
				                            <input type="hidden" asp-for="@Model.ProductList[i].TempAmount">
				                            <li class="list-group-item d-flex justify-content-between">
					                            <div>
						                            <h6 class="my-0">@Model.ProductList[i].Name</h6>
						                            @if (User.IsInRole(Fravin_Utility.WC.AdminRole))
						                            {
							                            <small class="text-muted">Amount: @Model.ProductList[i].TempAmount</small>
						                            }
						                            else
						                            {
							                            <small class="text-muted">Price :@Model.ProductList[i].Price UAN</small>
						                            }
                                                   
					                            </div>
					                            @if (User.IsInRole(Fravin_Utility.WC.AdminRole))
					                            {
						                            <span class="text-muted">@(Model.ProductList[i].Price* Model.ProductList[i].TempAmount) UAN</span>

					                            }
                                                
				                            </li>
				                            orderTotal+=Model.ProductList[i].Price* Model.ProductList[i].TempAmount;
			                            }
			                            @if (User.IsInRole(Fravin_Utility.WC.AdminRole))
			                            {
				                            <li class="list-group-item d-flex justify-content-between bg-light">
					                            <small class="text-info">Total (UAN)</small>
					                            <strong class="text-info">₴@orderTotal</strong>
				                            </li>
			                            }
		                            </ul>
	                            </div>
	                            @if (User.IsInRole(Fravin_Utility.WC.AdminRole))
	                            {
		                            <div class="col-12">
			                            <div class="wrapper">
				                            <div class="checkout container">
					                            <div id="dropin-container"></div>
					                            <input id="nonce" name="payment_method_nonce" type="hidden" />
				                            </div>
			                            </div>
		                            </div>
	                            }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
	                    <div class="col-12 col-md-5 offset-md-7">
                            @if (User.IsInRole(Fravin_Utility.WC.AdminRole))
                            {
	                            <button class="btn btn-success form-control" id="submit-button">Submit Order</button>
                            }
                            else
                            {
	                            <button type="submit" class="btn btn-primary form-control">Submit Inquiry</button>
                            }
	                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
	<partial name="_ValidationScriptsPartial" />
	<script src="https://js.braintreegateway.com/web/dropin/1.22.1/js/dropin.min.js"></script>
	<script>
		var client_token = "@ViewBag.ClientToken";
		var form = document.querySelector('#payment-form');
		braintree.dropin.create({
			authorization: client_token,
			container: '#dropin-container'
		}, function (createErr, instance) {
			form.addEventListener('submit', function () {
				event.preventDefault();
				//Add the nonce to the form and submit
				instance.requestPaymentMethod(function (err, payload) {
					// Submit payload.nonce to your server
					document.querySelector('#nonce').value = payload.nonce;
					form.submit();
				});
			});
		});
	</script>
}